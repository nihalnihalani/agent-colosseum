# =============================================================================
# Agent Colosseum — Unified Environment Variables
# Copy this file to .env and fill in your values.
# Used by BOTH the backend (FastAPI) and frontend (Next.js).
# =============================================================================

# ---------------------------------------------------------------------------
# General
# ---------------------------------------------------------------------------

# Set to "true" to run without real AI / databases (uses mock responses)
MOCK_MODE=false

# CORS allowed origins for the FastAPI server (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ---------------------------------------------------------------------------
# AWS Bedrock (LLM — required when MOCK_MODE=false)
# ---------------------------------------------------------------------------
# Either set credentials explicitly, or run `aws configure` / use IAM roles.
AWS_REGION=us-west-2
AWS_DEFAULT_REGION=us-west-2
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-haiku-20241022-v1:0
# AWS_ACCESS_KEY_ID=ASIA...
# AWS_SECRET_ACCESS_KEY=...
# AWS_SESSION_TOKEN=...         # needed for temporary / workshop credentials

# ---------------------------------------------------------------------------
# Neo4j AuraDB (strategy graph — optional)
# ---------------------------------------------------------------------------
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j
# NEO4J_VECTOR_DIMENSIONS=1536

# ---------------------------------------------------------------------------
# MongoDB Atlas (match archive — optional)
# ---------------------------------------------------------------------------
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority

# ---------------------------------------------------------------------------
# Datadog Observability (optional)
# ---------------------------------------------------------------------------
# DD_API_KEY=your-datadog-api-key
# DD_SITE=datadoghq.com
# DD_ENV=dev
# DD_SERVICE=agent-colosseum

# ---------------------------------------------------------------------------
# Frontend (Next.js) — NEXT_PUBLIC_ vars are exposed to the browser
# ---------------------------------------------------------------------------

# Base URL of the FastAPI backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL (auto-derived from NEXT_PUBLIC_API_URL if not set)
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Set to "true" to run the arena with a fully local mock (no backend needed)
NEXT_PUBLIC_MOCK_WS=false

# Set to "true" to enable the 3D imagination-tree visualisation
NEXT_PUBLIC_USE_3D_TREE=true
