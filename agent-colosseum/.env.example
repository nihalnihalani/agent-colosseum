# Agent Colosseum — Environment Variables
# Copy to .env and fill in your values

# ─── Backend ────────────────────────────────────────────────────────────────

# Neo4j AuraDB (optional — graph analytics disabled if not set)
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
# Set to the embedding dimension if you want vector similarity search
# NEO4J_VECTOR_DIMENSIONS=1536

# MongoDB Atlas (optional — match history won't persist across restarts if not set)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/

# LLM / Agent API key (required for real AI agents; mock mode works without it)
ANTHROPIC_API_KEY=sk-ant-...

# Set to "true" to run matches with mock LLM responses (no API key needed)
MOCK_MODE=false

# CORS allowed origins for the FastAPI server (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ─── Frontend ────────────────────────────────────────────────────────────────

# Base URL of the FastAPI backend (used by Next.js fetch calls)
NEXT_PUBLIC_API_URL=http://localhost:8888

# WebSocket URL (derived from NEXT_PUBLIC_API_URL if not set)
# NEXT_PUBLIC_WS_URL=ws://localhost:8888

# Set to "true" to run the arena with a fully local mock (no backend needed)
# NEXT_PUBLIC_MOCK_WS=true
NEXT_PUBLIC_COPILOTKIT_URL=http://localhost:8888
